{
  "variables": {
    "source_ami": "ami-9887c6e7",
    "debug": "{{env `DEBUG`}}"
  },

  "builders": [
    {
      "profile": "deploy",
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "{{ user `source_ami` }}",
      "instance_type": "t3.medium",
      "ssh_username": "centos",
      "ami_name": "Interchain Linux simpleserver image",
      "ami_description": "Interchain Linux simpleserver image {{ timestamp }}",
      "tags": {
        "OS": "CentOS",
        "Previous_OS": "{{ .SourceAMIName }}",
        "Previous_Tags": "{{ .SourceAMITags.TagName }}"
      },
      "run_tags": {
        "Name": "Gaia {{ user `gaia_version` }} OS {{ user `source_ami_description` }}"
      },
      "associate_public_ip_address": true,
      "disable_stop_instance": false
    }
  ],

  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "setup.yml",
      "sftp_command": "/usr/libexec/openssh/sftp-server -e",
      "extra_arguments": [
        "--extra-vars",
        "DEBUG={{user `debug`}}"
      ]
    }
  ]
}
